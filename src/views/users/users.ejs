<!DOCTYPE html>
<html lang="es">
<head>
    <%- include('../partials/head') %>
    <link rel="stylesheet" href="/stylesheets/styles.css">
    <link rel="stylesheet" href="/stylesheets/users.css">
  



    <title>Playground-Jugueteria</title>
</head>
<body>
    <!--Cabecera del sitio-->

    <%- include('../partials/header') %>

    <!--Logo, buscador y carrito de compras-->
    <main class="container-main">
        
            <a href="/">
                <img src="/images/Logo/Logo.png"  alt="Logo Playground Jugueteria"></img>
            </a>
     
        <div class="buscar-wrapper">
            <input class="buscador-box" type="search" text="Search" placeholder="Buscar producto">
            <button type="button" class="fas fa-search" id="lupa"></button>
        </div>
        <div class="container-carrito">
            <div class="carro">
                <a href="/products/detail/1">
                    <i class="fas fa-shopping-cart" id="icono-carrito">
                        <div class="box-carrito"></div>
                    </i>
                </a>
            </div>
        </div>
    </main>
    <!--MenÃº-->
    <nav class="main-navbar">
        <ul>
            <li><a href="/">Home</a></li>
            <li><a href="#marcas">Marcas</a></li>
            <li><a href="/products">Productos</a></li>
            <li><a href="/users">Usuarios</a></li>
            <li><a href="#contacto">Contacto</a></li>
            <li><a href="/users/profile">Perfil</a></li>
        </ul>
    </nav>

    <h1 class="titulo">MI LISTA DE USUARIOS</h1>
    <br>
    <br>
    <input class="crear" type="button" onclick="location.href='/users/register'" value="Crear nuevo usuario" >



    <div class="contenedor_principal">

    
        <section class="menu">
          <% allUsers.forEach(function(allUsers) { %>
            <a href="/users/detail/<%= allUsers.user_id %>">
  
              <article>
                <div class="imgen-contenedor">
                  <img src="/images/Users/<%= allUsers.image %>" alt="">
                </div>
                <ul>
                  <li>
                      Nombre: <%= allUsers.first_name %>
                  </li>
                  <li>
                    Apellido: <%= allUsers.last_name %>
                </li>
                  <li>
                      Email: <%= allUsers.email %> 
                  </li>
                  <li>
                      Tipo de usuario: <%=allUsers.Ucategory_name %>
                  </li>
                </ul>
              </article>
            </a>
          <% }) %> 
    
        </section>
      </div>
  
    
   



