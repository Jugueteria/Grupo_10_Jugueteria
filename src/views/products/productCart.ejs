<html lang="es">

<head>
    <%- include('../partials/head') %>
        <link rel="stylesheet" href="/stylesheets/productCart.css">

        <title>Playground-Jugueteria</title>
</head>

<body>
    <!--Cabecera del sitio-->

    <%- include('../partials/header') %>

        <!--Logo, buscador y carrito de compras-->
