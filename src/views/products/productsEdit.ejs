<!DOCTYPE html>
<html lang="es">
  <head>
    <link rel="stylesheet" href="/stylesheets/styles.css" />
    <link rel="stylesheet" href="/stylesheets/productsEdit.css" />

    <title>Edicion de producto</title>
  </head>
  <body>
    <%- include('../partials/navbar.ejs') %>

    <form
      class="Formulario"
      action="/products/edit/<%= productToEdit.id %>?_method=PATCH"
      method="POST"
    >
      <div class="container-product-create">
        <div class="container-create">
          <div class="card">
            <div class="card-header">
              <h3 class="">Editar producto</h3>
            </div>
            <div class="card-body">
              <input
                id="titulo"
                name="titulo"
                type="text"
                class="input-nombre"
                placeholder="Nombre del producto"
                value=<%=productToEdit.titulo%>
              required >
              <input
                id="precio"
                name="precio"
                type="text"
                class="input-precio"
                placeholder="precio del producto"
                value=<%=productToEdit.precio%>
              required >
              <div class="box-descripcion">
                <input
                  id="descripcionCorta"
                  name="descripcionCorta"
                  type="text"
                  class="input-descripcion"
                  placeholder="DescripciÃ³n del producto"
                  value= <%=productToEdit.descripcionCorta%>
                  required >
              </div>
            </div>
            <input class="button" type="submit" value="GUARDAR" />
          </div>
        </div>
      </div>
    </form>
  </body>
</html>
